<launch>
    <node pkg="turtlesim" exec="turtlesim_node" name="turtlesim">
        <param from="$(find-pkg-share turtle_control)/config/colors.yaml" />
    </node>
    <node pkg="turtle_control" exec="waypoint" name="waypoint">
        <param name="tolerance" value="0.05" />
        <param name="frequency" value="100.0" />
        <remap from="cmd_vel" to="turtle1/cmd_vel" />
        <remap from="pose" to="turtle1/pose" />
        <!-- this remap doesn't do anything since it is already turtle1/set_pen by default" -->
        <remap from="set_pen" to="turtle1/set_pen" />
        <remap from="teleport_pen" to="turtle1/teleport_pen" />
    </node>
</launch>>
